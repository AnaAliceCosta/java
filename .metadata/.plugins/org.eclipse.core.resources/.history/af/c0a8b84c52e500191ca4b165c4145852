package br.com.alura;

public class TestaCursoComAluno {
	public static void main(String[] args) {
		Curso javaColecoes = new Curso("Dominando as colecoes do java", "Paulo Silveira");
		javaColecoes.adiciona(new Aula("Trabalhanodo com ArrayList",21));
		javaColecoes.adiciona(new Aula("Ciando um aula",20));
		javaColecoes.adiciona(new Aula("Modelando Colecoes",24));
		
		Aluno a1 = new Aluno("ana",123);
		Aluno a2 = new Aluno("paula",3412);
		Aluno a3 = new Aluno("talita",4321);
		
		javaColecoes.matricula(a1);
		javaColecoes.matricula(a2);
		javaColecoes.matricula(a3);
		
		System.out.println("Todos os alunos matriculados:");
		javaColecoes.getAlunos().forEach(a ->{
			System.out.println(a);
		});
		
	}

}
