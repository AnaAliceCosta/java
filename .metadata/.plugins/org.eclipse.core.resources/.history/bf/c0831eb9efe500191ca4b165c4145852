package br.com.alura.maven.produtos;

public class Produto {

	private String nome;
	private double preco;

	public Produto(String nome, double preco) {
		if(nome == null) 
			throw new NullPointerException("Nome e preco são obrigatórios");

		this.nome = nome;
		this.preco = preco;
	}

	public double getPreco() {
		return preco;
		
	}
}
